{
    "name": "Sol4r",
    "description": "Test the code directly via a chrome extension!",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "icons": {
        "16": "img/icon-16.png",
        "48": "img/icon-48.png"
    },
    "author": "Sanix darker",
    "browser_action": {
        "default_icon": "img/icon-48.png",
        "default_title": "Sol4r",
        "default_popup": "popup.html"
    },
    "manifest_version": 2,
    "content_scripts": [{
        "js": ["js/background.js"],
        "css": ["css/style.css"],
        "matches": ["http://*/*", "https://*/*"]
    }]
}